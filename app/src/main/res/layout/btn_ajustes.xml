<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_modo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All School"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:onClick="configuracion"
        app:srcCompat="@drawable/ajustes" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_toStartOf="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toEndOf="@+id/txt_modo"
        android:layout_toRightOf="@+id/txt_modo"
        android:shadowColor="#123aaa"
        android:text="Diurno"
        android:textSize="8sp" />



</RelativeLayout>