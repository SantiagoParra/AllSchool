<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dibujo"
    android:orientation="vertical"
    tools:showIn="@layout/activity_dibujo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton

        android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_stat_name"
></ImageButton>
        <ImageButton

            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/edit"

            ></ImageButton>
        <ImageButton
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/borrar"

            ></ImageButton>
        <ImageButton
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/save"

            ></ImageButton>
    </LinearLayout>

    <com.example.allschool.lienzo
        android:id="@+id/Lienzo"
        android:layout_width="400dp"
        android:layout_height="480dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/colorNegro"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FF000000"
            android:tag="#FF000000"
            android:text="Button" />

        <ImageButton
            android:id="@+id/colorRojo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FFFF0000"
            android:tag="#FFFF0000"
            android:text="Button" />

        <ImageButton
            android:id="@+id/colorVerde"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FF00FD00"
            android:tag="#FF00FD00"
            android:text="Button" />

        <ImageButton
            android:id="@+id/colorAzul"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FF0000FF"
            android:tag="#FF0000FF"
            android:text="Button" />

        <ImageButton
            android:id="@+id/colorAzulClaro"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#F0A0F0F0"
            android:tag="#F0A0F0F0"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>